<style>
  .bio-card {
    position: absolute;
    top: 2rem;
    right: 2rem;
    z-index: 20;
    max-width: 300px;
    /* Torn paper edge via clip-path */
    clip-path: polygon(
      0% 2%, 3% 0%, 7% 3%, 12% 1%, 18% 2%, 22% 0%, 28% 3%, 33% 1%, 38% 2%,
      43% 0%, 48% 3%, 53% 1%, 58% 0%, 63% 2%, 68% 1%, 73% 3%, 78% 0%, 83% 2%,
      88% 1%, 93% 3%, 97% 0%, 100% 2%,
      100% 97%, 97% 100%, 93% 97%, 88% 99%, 83% 98%, 78% 100%, 73% 97%,
      68% 99%, 63% 98%, 58% 100%, 53% 97%, 48% 99%, 43% 100%, 38% 98%,
      33% 99%, 28% 97%, 22% 100%, 18% 98%, 12% 99%, 7% 97%, 3% 100%, 0% 98%
    );
    animation: bioFloat 6s ease-in-out infinite;
  }

  .bio-card-inner {
    background: rgba(250, 247, 240, 0.92);
    backdrop-filter: blur(8px);
    padding: 1.75rem 1.5rem;
    border: 1px solid rgba(180, 170, 155, 0.3);
    position: relative;
  }

  /* Watercolor wash overlay */
  .bio-card-inner::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at 30% 20%, rgba(180, 200, 160, 0.15) 0%, transparent 60%),
                radial-gradient(ellipse at 70% 80%, rgba(200, 180, 150, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .bio-name {
    font-family: 'DM Serif Display', serif;
    font-size: 1.4rem;
    color: #4a5a3e;
    margin: 0 0 0.15rem;
    line-height: 1.2;
  }

  .bio-handle {
    font-family: 'Caveat', cursive;
    font-size: 1rem;
    color: #8a8478;
    margin: 0 0 0.75rem;
  }

  .bio-text {
    font-family: 'Caveat', cursive;
    font-size: 1.05rem;
    line-height: 1.4;
    color: #5a5045;
    margin: 0 0 0.5rem;
  }

  .bio-extras {
    font-family: 'Caveat', cursive;
    font-size: 0.9rem;
    color: #7a7468;
    margin: 0 0 0.75rem;
    line-height: 1.3;
  }

  .bio-location {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    color: #8a8478;
    margin-bottom: 0.75rem;
  }

  .bio-socials {
    display: flex;
    gap: 0.75rem;
  }

  .bio-social-link {
    color: #6a7a5e;
    transition: color 0.2s ease, transform 0.2s ease;
    display: flex;
    align-items: center;
  }

  .bio-social-link:hover {
    color: #4a5a3e;
    transform: translateY(-2px);
  }

  @keyframes bioFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-6px); }
  }

  @media (max-width: 768px) {
    .bio-card {
      position: relative;
      top: auto;
      right: auto;
      max-width: 100%;
      margin: 1rem;
    }
  }
</style>
